---
# by default, the Ghost image will use SQLite (and thus requires no separate database container)
# we have used MySQL here merely for demonstration purposes (especially environment-variable-based configuration)

version: '3.1'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:

  ghost:
    image: ghost:1-alpine
    networks:
      - traefik_network
    restart: unless-stopped
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.ghost.loadbalancer.server.scheme=http"
      - "traefik.http.services.ghost.loadbalancer.server.port=2368"
      - "traefik.http.routers.ghost-http.rule=Host(`ghost.{{ domain }}`)"
      - "traefik.http.routers.ghost-http.entrypoints=http"
      - "traefik.http.routers.ghost-http.middlewares=auth@file, redirect@file, customFrameHomelab@file"
      - "traefik.http.routers.ghost.rule=Host(`ghost.{{ domain }}`)"
      - "traefik.http.routers.ghost.entrypoints=https"
      - "traefik.http.routers.ghost.middlewares=auth@file, customFrameHomelab@file"
      - "traefik.http.routers.ghost.tls=true"
      - "traefik.http.routers.ghost.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.ghost.tls.domains[0].sans=*.{{ domain }}"
      - "traefik.http.routers.ghost.tls.certresolver=cloudflare-dns"
{% if enable_tor %}
      - "traefik.tor.frontend.rule=Host:ghost.{{ tor_domain }}"
      - "traefik.tor.protocol=http"
      - "traefik.tor.port=2368"
{% endif %}
