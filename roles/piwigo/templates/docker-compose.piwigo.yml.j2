---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services: 
  piwigo:
    restart: unless-stopped
    domainname: localhost
    depends_on:
      - mysqlpiwigo
    networks:
      - traefik_network
    ports:
      - 8088:80
    image: mathieuruellan/piwigo
    volumes:
        - "{{ volumes_root }}/piwigo/config:/config"
        - "{{ volumes_root }}/piwigo/data/galleries:/var/www/galleries"
        - "{{ volumes_root }}/piwigo/data/local:/var/www/local"
        - "{{ volumes_root }}/piwigo/data/plugins:/var/www/plugins"
        - "{{ volumes_root }}/piwigo/data/themes:/var/www/themes"
        - "{{ volumes_root }}/piwigo/cache:/var/www/_data/i"
        - "{{ volumes_root }}/piwigo/upload:/var/www/upload"
        - "{{ volumes_root }}/piwigo/logs:/var/log/apache2"
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.piwigo.loadbalancer.server.scheme=http"
      - "traefik.http.services.piwigo.loadbalancer.server.port=80"
      - "traefik.http.routers.piwigo-http.rule=Host(`piwigo.{{ domain }}`)"
      - "traefik.http.routers.piwigo-http.entrypoints=http"
      - "traefik.http.routers.piwigo-http.middlewares={% if piwigo.https_only %}redirect@file, {% else %}{% if piwigo.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
      - "traefik.http.routers.piwigo.rule=Host(`piwigo.{{ domain }}`)"
      - "traefik.http.routers.piwigo.entrypoints=https"
      - "traefik.http.routers.piwigo.middlewares={% if piwigo.auth %}{% if enable_authelia %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.piwigo.tls=true"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.piwigo.tls.certresolver=dns"
      - "traefik.http.routers.piwigo.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.piwigo.tls.domains[0].sans=*.{{ domain }}"
{% else %}
      - "traefik.http.routers.piwigo.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.piwigo-tor-http.rule=Host(`piwigo.{{ tor_domain }}`)"
      - "traefik.http.routers.piwigo-tor-http.entrypoints=http"
      - "traefik.http.routers.piwigo-tor-http.middlewares={% if piwigo.auth %}{% if enable_authelia %}authelia-tor@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab-tor@file"
{% endif %}

  mysqlpiwigo:
    restart: unless-stopped
    image: mariadb:10.4
    networks:
      - traefik_network
    volumes:
      - "{{ volumes_root }}/piwigo/mysql/:/var/lib/mysql"
    environment:
      - MYSQL_ROOT_PASSWORD="{{lookup('password', './settings/passwords/piwigo_root_db_password chars=digits')}}"
      - MYSQL_DATABASE=piwigo
      - MYSQL_USER=piwigo
      - MYSQL_PASSWORD="{{lookup('password', './settings/passwords/piwigo_db_password chars=digits')}}"