---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  # RSS Reader
  miniflux:
    image: miniflux/miniflux:2.0.11
    networks:
      - traefik_network
    restart: unless-stopped
    environment:
      - DATABASE_URL=postgres://miniflux:"{{lookup('password', './settings/passwords/miniflux_db_password chars=digits')}}"@miniflux_db/miniflux?sslmode=disable
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.miniflux.loadbalancer.server.scheme=http"
      - "traefik.http.services.miniflux.loadbalancer.server.port=8080"
      - "traefik.http.routers.miniflux-http.rule=Host(`{% if miniflux.custom_domain %}{{ miniflux.custom_domain }}{% else %}{{ miniflux.subdomain + "." + domain }}{% endif %}`)"
      - "traefik.http.routers.miniflux-http.entrypoints=http"
{% if not miniflux.https_only %}
      - "traefik.http.routers.miniflux-http.middlewares={% if miniflux.https_only %}redirect@file, {% else %}{% if miniflux.auth %}{% if authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
{% else %}
      - "traefik.http.middlewares.redirect-to-https.redirectscheme.scheme=https"
      - "traefik.http.routers.miniflux-http.middlewares=redirect-to-https"
{% endif %}
      - "traefik.http.routers.miniflux.rule=Host(`{% if miniflux.custom_domain %}{{ miniflux.custom_domain }}{% else %}{{ miniflux.subdomain + "." + domain }}{% endif %}`)"
      - "traefik.http.routers.miniflux.entrypoints=https"
      - "traefik.http.routers.miniflux.middlewares={% if miniflux.auth %}{% if authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.miniflux.tls=true"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.miniflux.tls.certresolver=dns"
      - "traefik.http.routers.miniflux.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.miniflux.tls.domains[0].sans=*.{{ domain }}"
{% else %}
      - "traefik.http.routers.miniflux.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.miniflux-tor-http.rule=Host(`{{ miniflux.subdomain }}.{{ tor_domain }}`)"
      - "traefik.http.routers.miniflux-tor-http.entrypoints=http"
      - "traefik.http.routers.miniflux-tor-http.middlewares={% if miniflux.auth %}{% if authelia.enable %}authelia-tor@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab-tor@file"
{% endif %}

  miniflux_db:
    image: postgres:10.1
    networks:
      - traefik_network
    restart: unless-stopped
    environment:
      - POSTGRES_USER=miniflux
      - POSTGRES_PASSWORD="{{lookup('password', './settings/passwords/miniflux_db_password chars=digits')}}"
    volumes:
      - "{{ volumes_root }}/miniflux/db:/var/lib/postgresql/data"
