---
version: '3'

networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  mysql:
    image: mysql:5.7.21
    networks:
      - traefik_network
    restart: unless-stopped
    environment:
    - MYSQL_ROOT_PASSWORD="{{lookup('password', './settings/passwords/bookstack_db_root_password chars=digits')}}"
    - MYSQL_DATABASE=bookstack
    - MYSQL_USER=bookstack
    - MYSQL_PASSWORD="{{lookup('password', './settings/passwords/bookstack_db_password chars=digits')}}"
    volumes:
    - /var/homelabos/bookstack/mysql-data:/var/lib/mysql

  bookstack:
    image: solidnerd/bookstack:0.24.3
    networks:
      - traefik_network
    restart: unless-stopped
    depends_on:
    - mysql
    environment:
    - DB_HOST=mysql:3306
    - DB_DATABASE=bookstack
    - DB_USERNAME=bookstack
    - DB_PASSWORD="{{lookup('password', './settings/passwords/bookstack_db_password chars=digits')}}"
    volumes:
    - /var/homelabos/bookstack/uploads:/var/www/bookstack/public/uploads
    - /var/homelabos/bookstack/storage-uploads:/var/www/bookstack/public/storage
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.bookstack.loadbalancer.server.scheme=http"
      - "traefik.http.services.bookstack.loadbalancer.server.port=80"
      - "traefik.http.routers.bookstack-http.rule=Host(`bookstack.{{ domain }}`)"
      - "traefik.http.routers.bookstack-http.entrypoints=http"
      - "traefik.http.routers.bookstack-http.middlewares=auth@file, redirect@file, customFrameHomelab@file"
      - "traefik.http.routers.bookstack.rule=Host(`bookstack.{{ domain }}`)"
      - "traefik.http.routers.bookstack.entrypoints=https"
      - "traefik.http.routers.bookstack.middlewares=auth@file, customFrameHomelab@file"
      - "traefik.http.routers.bookstack.tls=true"
      - "traefik.http.routers.bookstack.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.bookstack.tls.domains[0].sans=*.{{ domain }}"
      - "traefik.http.routers.bookstack.tls.certresolver=cloudflare-dns"
{% if enable_tor %}
      - "traefik.tor.frontend.rule=Host:bookstack.{{ tor_domain }}"
      - "traefik.tor.protocol=http"
      - "traefik.tor.port=80"
{% endif %}
