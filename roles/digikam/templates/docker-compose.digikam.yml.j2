---
version: '3'

# This networks section required for the pacakge to be visible to Traefik. 
# DO NOT Remove
networks:
  traefik_network:
    external:
      name: homelabos_traefik

services:
  digiKam:
    image: rpufky/digikam:6.1.0
    environment:
      - USER_ID={{ uid }}
      - GROUP_ID={{ gid }}
      - TZ={{ common_timezone }}
      - KEEP_APP_RUNNING=1
      - DISPLAY_WIDTH=1920
      - DISPLAY_HEIGHT=1080
      - ENABLE_CJK_FONT=0
      - VNC_PASSWORD="{{lookup('password', './settings/passwords/digikam_vnc_password chars=digits')}}"
    volumes:
      - "{{ volumes_root }}/digikam/config:/config"
      - "{{ storage_dir }}/Pictures:/data"
      - /etc/localtime:/etc/localtime:ro
    restart: unless-stopped
    ports:
      - 5800:5800
    networks:
      - traefik_network
    labels:
      - "traefik.enable=true"
      - "traefik.docker.network=homelabos_traefik"
      - "traefik.http.services.digikam.loadbalancer.server.scheme=http"
      - "traefik.http.services.digikam.loadbalancer.server.port=5800"
      - "traefik.http.routers.digikam-http.rule=Host(`{% if digikam.custom_domain %}{{ digikam.custom_domain }}{% else %}{{ digikam.subdomain + "." + domain }}{% endif %}`)"
      - "traefik.http.routers.digikam-http.entrypoints=http"
{% if not digikam.https_only %}
      - "traefik.http.routers.digikam-http.middlewares={% if digikam.https_only %}redirect@file, {% else %}{% if digikam.auth %}{% if authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}{% endif %}customFrameHomelab@file"
{% else %}
      - "traefik.http.middlewares.redirect-to-https.redirectscheme.scheme=https"
      - "traefik.http.routers.digikam-http.middlewares=redirect-to-https"
{% endif %}
      - "traefik.http.routers.digikam.rule=Host(`{% if digikam.custom_domain %}{{ digikam.custom_domain }}{% else %}{{ digikam.subdomain + "." + domain }}{% endif %}`)"
      - "traefik.http.routers.digikam.entrypoints=https"
      - "traefik.http.routers.digikam.middlewares={% if digikam.auth %}{% if authelia.enable %}authelia@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab@file"
      - "traefik.http.routers.digikam.tls=true"
{% if traefik.dns_challenge_provider %}
      - "traefik.http.routers.digikam.tls.certresolver=dns"
      - "traefik.http.routers.digikam.tls.domains[0].main={{ domain }}"
      - "traefik.http.routers.digikam.tls.domains[0].sans=*.{{ domain }}"
{% else %}
      - "traefik.http.routers.digikam.tls.certresolver=http"
{% endif %}
{% if enable_tor %}
      - "traefik.http.routers.digikam-tor-http.rule=Host(`{{ digikam.subdomain }}.{{ tor_domain }}`)"
      - "traefik.http.routers.digikam-tor-http.entrypoints=http"
      - "traefik.http.routers.digikam-tor-http.middlewares={% if digikam.auth %}{% if authelia.enable %}authelia-tor@file{% else %}basicAuth@file{% endif %}, {% endif %}customFrameHomelab-tor@file"
{% endif %}
